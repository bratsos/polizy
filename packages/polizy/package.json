{
  "name": "polizy",
  "version": "0.1.0",
  "description": "A flexible, Zanzibar-inspired authorization library for Node.js and TypeScript.",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./prisma-storage": {
      "import": {
        "types": "./dist/prisma-storage.d.ts",
        "default": "./dist/prisma-storage.mjs"
      },
      "require": {
        "types": "./dist/prisma-storage.d.ts",
        "default": "./dist/prisma-storage.cjs"
      }
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build:types": "tsc --emitDeclarationOnly --outDir dist/types",
    "build:bundle": "rollup -c",
    "build": "pnpm run clean && pnpm run build:types && pnpm run build:bundle",
    "dev": "rollup -c -w",
    "test": "dotenv -e ../../examples/app1/.env -- node --no-warnings=ExperimentalWarning --test src/*.test.ts src/**/*.test.ts"
  },
  "keywords": [
    "authorization",
    "authz",
    "permissions",
    "access control",
    "zanzibar",
    "typescript",
    "node"
  ],
  "author": "Alex Bratsos (https://github.com/bratsos)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bratsos/polizy.git"
  },
  "homepage": "https://github.com/bratsos/polizy#readme",
  "bugs": {
    "url": "https://github.com/bratsos/polizy/issues"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "dotenv": "^16.4.7",
    "prisma": "^6.5.0",
    "rollup": "^4.39.0",
    "rollup-plugin-dts": "^6.2.1",
    "typescript": "^5.8.2",
    "@prisma/client": "^6.5.0"
  },
  "files": [
    "dist",
    "LICENSE"
  ],
  "dependencies": {
    "fast-equals": "^5.2.2",
    "tslib": "^2.8.1"
  },
  "peerDependencies": {
    "@prisma/client": "^6.0.0"
  },
  "peerDependenciesMeta": {
    "@prisma/client": {
      "optional": true
    }
  }
}
